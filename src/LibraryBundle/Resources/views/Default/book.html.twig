{% extends "LibraryBundle:Default:layout.html.twig" %}

{% block body %}
	<h2>{{ book.title }} <span class="text-muted">
	by <a href="{{ path('library_author', {'slug': book.author.slug}) }}">{{ book.author.name }}</a></span></h2>
	{% if book.isNew == 1 %}<span class="text-muted">Nouveau</span>{% endif %}
	<h3>Table of contents</h3>
	<div>{{ book.toc }}</div>
{% endblock %}