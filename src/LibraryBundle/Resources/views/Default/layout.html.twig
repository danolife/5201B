<!DOCTYPE HTML>
<html>
	<head>
	    
	    <meta charset="utf-8">
	    <title>Library</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"/>

	</head>
	<body>
	  	<div class="container">
	  		<div class="row text-center">
	  			<h1>Bibliothèque</h1>
	  		</div>

		  	<ul class="nav nav-pills">
				<li role="presentation" {% if app.request.attributes.get('_route') == 'library_homepage' %}class="active"{% endif %}>
					<a href="{{ path('library_homepage') }}">Présentation</a>
				</li>
				<li role="presentation" class="dropdown
				{% if app.request.attributes.get('_route') == 'library_category' %} active{% endif %}">
					<a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Catégories <span class="caret"></span></a>
    				<ul class="dropdown-menu">
    					{{ render(controller('LibraryBundle:Default:categories')) }}
    				</ul>
				</li>
				<li role="presentation" {% if app.request.attributes.get('_route') == 'library_news' %}class="active"{% endif %}>
					<a href="{{ path('library_news') }}">Nouveautés</a>
				</li>
			</ul>
			<div class="row">
				<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			    {% block body %}
			    {% endblock %}
			    </div>
		    </div>
		</div>


		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
	</body>
</html>