			{{ render(controller('LibraryBundle:Default:categories')) }}
		  </ul>
        </li>
        <li {% if app.request.attributes.get('_route') == 'library_news' %}class="active"{% endif %}>
        	<a href="{{ path('library_news') }}">Nouveautés</a>
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
